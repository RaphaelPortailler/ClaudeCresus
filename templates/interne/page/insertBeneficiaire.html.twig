{% extends 'interne/partial/intBase.html.twig' %}

{% block metatitle %}
    - admin nouveau beneficiaire
{% endblock %}

{% block main %}
    <div class="container mt-5">
        <h2 class="text-danger">AJOUT D'UN BENEFICIAIRE</h2>

        {{ form_start(beneficiaireForm) }}

        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    {{ form_label(beneficiaireForm.civilite_beneficiaire) }}
                    {{ form_widget(beneficiaireForm.civilite_beneficiaire, { 'attr': {'class': 'form-control', 'style': 'max-width: 100%;'} }) }}
                    {{ form_errors(beneficiaireForm.civilite_beneficiaire) }}
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    {{ form_label(beneficiaireForm.nom_beneficiaire) }}
                    {{ form_widget(beneficiaireForm.nom_beneficiaire, { 'attr': {'class': 'form-control', 'style': 'max-width: 100%;'} }) }}
                    {{ form_errors(beneficiaireForm.nom_beneficiaire) }}
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    {{ form_label(beneficiaireForm.prenom_beneficiaire) }}
                    {{ form_widget(beneficiaireForm.prenom_beneficiaire, { 'attr': {'class': 'form-control', 'style': 'max-width: 100%;'} }) }}
                    {{ form_errors(beneficiaireForm.prenom_beneficiaire) }}
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    {{ form_label(beneficiaireForm.ddn_beneficiaire) }}
                    {{ form_widget(beneficiaireForm.ddn_beneficiaire, { 'attr': {'class': 'form-control', 'style': 'max-width: 100%;'} }) }}
                    {{ form_errors(beneficiaireForm.ddn_beneficiaire) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    {{ form_label(beneficiaireForm.mail_beneficiaire) }}
                    {{ form_widget(beneficiaireForm.mail_beneficiaire, { 'attr': {'class': 'form-control', 'style': 'max-width: 100%;'} }) }}
                    {{ form_errors(beneficiaireForm.mail_beneficiaire) }}
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    {{ form_label(beneficiaireForm.telephone_beneficiaire) }}
                    {{ form_widget(beneficiaireForm.telephone_beneficiaire, { 'attr': {'class': 'form-control', 'style': 'max-width: 100%;'} }) }}
                    {{ form_errors(beneficiaireForm.telephone_beneficiaire) }}
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    {{ form_label(beneficiaireForm.profession_beneficiaire) }}
                    {{ form_widget(beneficiaireForm.profession_beneficiaire, { 'attr': {'class': 'form-control', 'style': 'max-width: 100%;'} }) }}
                    {{ form_errors(beneficiaireForm.profession_beneficiaire) }}
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    {{ form_label(beneficiaireForm.libelle_prof) }}
                    {{ form_widget(beneficiaireForm.libelle_prof, { 'attr': {'class': 'form-control', 'style': 'max-width: 100%;'} }) }}
                    {{ form_errors(beneficiaireForm.libelle_prof) }}
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-3">
            <button type="submit" class="btn btn-primary" name="clicked_button" value="create_demande">Création d'une demande</button>
            <button type="submit" class="btn btn-secondary" name="clicked_button" value="add_second_beneficiaire">2e bénéficiaire</button>

            <a href="{{ path('RechercheBeneficiaire') }}" class="btn btn-danger">
                <i class="fa fa-times-circle"></i> Abandonner
            </a>
        </div>
        {{ form_end(beneficiaireForm) }}
    </div>
{% endblock %}